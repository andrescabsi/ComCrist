<!-- Latest Blog Items - musegrid.com -->
<div class="latest-blog-container"> 
  <!-- Blog items start here -->
  <div class="latest-blog-item"> 
    <!-- Blog boxed date starts here --> 
    <a href="{tag_itemurl_nolink}">
    <div class="latest-blog-date">
      <div class="Snap-Text---H4 latest-blog-day ">{tag_blogpostday} {tag_blogpostmonth}</div>
      <hr>
      <div class="Snap-Text---H5 latest-blog-year ">{tag_blogpostyear}</div>
    </div>
    </a>
    <div class="latest-blog-title Snap-Text---H4" style="display: block;">{tag_blogposttitle}</div>
    <!-- Blog boxed date ends --> 

    <div class="latest-blog-preview Snap---BC-Module---Blog---Post-Content">{tag_blogpostbodypreview, Read > }</div>
  </div>
</div>
<!-- End -->